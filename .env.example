# Sample Project - Environment Configuration Template
# Copy this file to .env and configure with your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=Login_Test_Web
DB_USER=root
DB_PASSWORD=root

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_PORT=8081
SERVER_CONTEXT_PATH=/login-backend

# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME=Sample Login Project
APP_VERSION=1.0
APP_ENVIRONMENT=development

# ============================================
# SECURITY CONFIGURATION
# ============================================
# BCrypt work factor (higher = more secure but slower)
BCRYPT_ROUNDS=10

# Session timeout in minutes
SESSION_TIMEOUT=30

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Base URL for API calls
API_BASE_URL=http://localhost:8081/login-backend/api

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=INFO
DEBUG_MODE=false

# ============================================
# NOTES
# ============================================
# - Never commit .env file to version control
# - Keep DB_PASSWORD secure
# - Use strong passwords in production
# - Enable HTTPS in production
# - Change default credentials before deployment
